<Window x:Class="Learn_English.MainMenu"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Learn_English"
        mc:Ignorable="d"
        Title="MainMenu" Height="350" Width="350" FontSize="14" Background="#6699ff">
  <Border Background="#2e3137" CornerRadius="20" Margin="20">
    <StackPanel Margin="20">
      <Label Content="Main Menu" Foreground="White" FontSize="25" HorizontalAlignment="Center"/>
      <Separator></Separator>
      <Button Name="btnSignIn" Click="btnSignIn_Click" Content="Sign In" Margin="60 45" Background="#545d6a" Foreground="White" FontSize="18"/>
      <Button Name="btnLogIn" Click="btnLogIn_Click" Content="Log In" Margin="60 45" Background="#545d6a" Foreground="White" FontSize="18"/>
      <Button Name="btnHelp" Click="btnHelp_Click" Content="Help" Margin="60 45" Background="#545d6a" Foreground="White" FontSize="18"/>
    </StackPanel>
  </Border>
</Window>