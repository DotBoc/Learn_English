<Page x:Class="Learn_English.StudyTopics"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Learn_English"
      mc:Ignorable="d" 
      d:DesignHeight="550" d:DesignWidth="800"
      Title="StudyTopics">

    <Grid>
        <Label x:Name="lbl_course_name" Content="Course Name" Margin="0,10,0,0" VerticalAlignment="Top" HorizontalContentAlignment="Center" FontSize="36" FontWeight="Bold"/>
        <Label x:Name="lbl_topic_title" Content="Topic Title" Margin="0,100,0,0" VerticalAlignment="Top" HorizontalContentAlignment="Center" FontSize="24" FontWeight="Bold" Height="60"/>
        <TextBlock x:Name="txt_blk" HorizontalAlignment="Left" Margin="10,165,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Height="324" Width="780"/>
        <Button x:Name="bt_next" Content="Next" VerticalAlignment="Bottom" Width="181" Margin="200,0,420,20" HorizontalAlignment="Center"  FontSize="24" Click="bt_next_Click"/>
        <Button x:Name="bt_main" Content="Main Menu" VerticalAlignment="Bottom" Width="181" Margin="420,0,200,20" HorizontalAlignment="Center"  FontSize="24" Click="bt_main_Click"/>


    </Grid>
</Page>
